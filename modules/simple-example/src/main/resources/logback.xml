<configuration>
  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder class="net.logstash.logback.encoder.LogstashEncoder" />
  </appender>

  <logger name="com.thenewmotion.myr.events.pipeline.LocationStreamPersister" level="DEBUG" />
  <logger name="com.thenewmotion.myr.events.pipeline.EventProcessingPipeline" level="DEBUG" />
  <logger name="com.thenewmotion.myr.events.pipeline.HubppProcessingPipeline$" level="DEBUG" />

  <root level="INFO">
    <appender-ref ref="console"/>
  </root>
</configuration>
